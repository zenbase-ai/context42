{
	"editor.codeActionsOnSave": {
		"source.fixAll": "always"
	},
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"editor.insertSpaces": true,
	"editor.tabSize": 2,
	"files.exclude": {
		"**/.DS_Store": true,
		"**/.git": true,
		"**/.hg": true,
		"**/.ruby-lsp": true,
		"**/.svn": true,
		"**/CVS": true,
		"**/Thumbs.db": true,
		"dist/": true,
		"node_modules/": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
